<div class="row">
    <div class="col s4 push-s4">
        <h2>Register a new category on the menu</h2>
        <%= form_for @category do |f| %>
            <p>
                <%= f.label :name, "name" %><br />
                <%= f.text_field :name %>
            </p>
            <p>
                <%= f.submit "Create", class: "waves-effect waves-light btn" %>
            </p>
        <% end %>
    </div>
</div>
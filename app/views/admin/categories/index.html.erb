<div class="row">
    <div class="col s12">

        <h2>Categories of the menu</h2>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% @categories.each do |category| %>
                    <tr>
                        <td><%= category.name %></td>
                        <td></td>
                    </tr>
                <% end %>
            </tbody>
        </table>

        <div class="fixed-action-btn ">
            <a class="btn-floating btn-large waves-effect waves-light red" href="<%= new_admin_category_path %>"><i class="material-icons">add</i></a>
        </div>
    </div>
</div>
